{
  "mcpServers": {
    "sqlite": {
      "command": "uv",
      "args": [
        "--directory",
        "mcp_servers/mcp_servers_official/src/sqlite",
        "run",
        "mcp-server-sqlite",
        "--db-path",
        "data/Chinook_Sqlite.db"
      ]
    },
    "python_repl": {
                    "command": "deno",
                    "args": [
                        "run", "-N", "-R=node_modules", "-W=node_modules",
                        "--node-modules-dir=auto",
                        "jsr:@pydantic/mcp-run-python", "stdio"
                    ]
                },
                "chroma": {
                  "command": "uvx",
                  "args": [
                      "chroma-mcp",
                      "--client-type", 
                      "persistent",
                      "--data-dir", 
                      "data/chroma_db"
                  ]
              }
  }
}